/* pages/read/read-detail/read-detail.wxss */
@import '/app.wxss';

.head-img {
    position: relative;
}

.head-img>image {
    width: 100%;
}

.head-music {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%); 
    width: 100rpx;
    height: 100rpx;
}

.head-music>image {
    width: 100%;
    height: 100%;
}

.content-baseinfo {
    display: flex;
    align-items: center;
    font-size: 16px;
    padding: 10rpx 20rpx;
}

.content-baseinfo>image {
    width: 60rpx;
    height: 60rpx;
}

.content-baseinfo>.author {
    margin: 0 10rpx 0 10rpx;
}

.content-baseinfo>.date {
    margin-left: 20rpx;
    color: #999;
    font-size: 12px;
}

.content-title {
    padding: 10rpx 20rpx;
    color: #333;
    font-weight: bold;
    font-size: 18px;
}

.content-action {
    position: relative;
    margin: 0 20rpx;
}
.content-action>.line {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    height: 1rpx;
    background-color: #ccc;
    z-index: -1;
}

.content-action>image {
    width: 80rpx;
    height: 80rpx;
    float: right;
    background-color: #fff;
}
.content-action>.collection {
    margin-right: 20rpx;
}

.content {
    margin: 10rpx 0;
    padding: 0 20rpx;
    font-size: 12px;
    letter-spacing: 0.1em;
    color: #999;
}


